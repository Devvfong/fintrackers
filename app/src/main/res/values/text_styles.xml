<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- ========================= -->
    <!-- DISPLAY & LARGE AMOUNTS -->
    <!-- ========================= -->
    
    <!-- Extra Large - Balance Display -->
    <style name="TextAppearance.Fintrack.Display.Large" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Large Display - Budget Remaining -->
    <style name="TextAppearance.Fintrack.Display.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- ========================= -->
    <!-- TITLES & HEADERS -->
    <!-- ========================= -->
    
    <!-- Screen Title - Welcome Back, Sign In -->
    <style name="TextAppearance.Fintrack.Title.Large" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Onboarding Title -->
    <style name="TextAppearance.Fintrack.Title.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Section Headers - Recent Transactions -->
    <style name="TextAppearance.Fintrack.Title.Small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Card Title, Toolbar Title -->
    <style name="TextAppearance.Fintrack.Headline" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- ========================= -->
    <!-- BODY TEXT -->
    <!-- ========================= -->
    
    <!-- Body Large - Input Fields, Primary Text -->
    <style name="TextAppearance.Fintrack.Body.Large" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Body Medium - Secondary Text -->
    <style name="TextAppearance.Fintrack.Body.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Body Small - Labels, Captions -->
    <style name="TextAppearance.Fintrack.Body.Small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Caption - Tiny Text -->
    <style name="TextAppearance.Fintrack.Caption" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- ========================= -->
    <!-- BUTTONS -->
    <!-- ========================= -->
    
    <!-- Primary Button Text -->
    <style name="TextAppearance.Fintrack.Button.Primary" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Secondary Button Text -->
    <style name="TextAppearance.Fintrack.Button.Secondary" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Text Button / Link -->
    <style name="TextAppearance.Fintrack.Button.Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_primary</item>
    </style>
    
    <!-- ========================= -->
    <!-- SPECIAL STYLES -->
    <!-- ========================= -->
    
    <!-- App Name / Logo Text -->
    <style name="TextAppearance.Fintrack.AppName" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    
    <!-- Amount Text (Transaction List) -->
    <style name="TextAppearance.Fintrack.Amount" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Category Name -->
    <style name="TextAppearance.Fintrack.Category" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Tab Text -->
    <style name="TextAppearance.Fintrack.Tab" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>
