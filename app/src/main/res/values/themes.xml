<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Base.Theme.Fintrack" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/purple_primary</item>
        <item name="colorSecondaryVariant">@color/purple_primary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/purple_primary</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- ================================ -->
        <!-- DEFAULT FONT - POPPINS -->
        <!-- ================================ -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>

        <!-- Text Appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Fintrack.Title.Large</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Fintrack.Title.Medium</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Fintrack.Title.Small</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Fintrack.Headline</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Fintrack.Body.Large</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Fintrack.Body.Medium</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Fintrack.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.Fintrack.Button.Primary</item>

        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.Fintrack.Button</item>
        <item name="textInputStyle">@style/Widget.Fintrack.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.Fintrack.BottomNavigationView</item>
    </style>

    <!-- Main App Theme -->
    <style name="Theme.Fintrack" parent="Base.Theme.Fintrack" />

    <!-- ================================ -->
    <!-- BUTTON STYLES -->
    <!-- ================================ -->

    <!-- Primary Button -->
    <style name="Widget.Fintrack.Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- Outlined Button -->
    <style name="Widget.Fintrack.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Text Button -->
    <style name="Widget.Fintrack.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- ================================ -->
    <!-- INPUT FIELDS -->
    <!-- ================================ -->

    <style name="Widget.Fintrack.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="boxStrokeColor">@color/purple_primary</item>
        <item name="hintTextColor">@color/purple_primary</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <!-- ================================ -->
    <!-- BOTTOM NAVIGATION -->
    <!-- ================================ -->

    <style name="Widget.Fintrack.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Fintrack.Tab</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Fintrack.Tab</item>
    </style>

    <!-- ================================ -->
    <!-- TOOLBAR / ACTION BAR -->
    <!-- ================================ -->

    <style name="Widget.Fintrack.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="titleTextAppearance">@style/TextAppearance.Fintrack.Headline</item>
    </style>

    <!-- ================================ -->
    <!-- SPLASH SCREEN -->
    <!-- ================================ -->

    <style name="Theme.Fintrack.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/purple_primary</item>
        <item name="android:statusBarColor">@color/purple_primary</item>
        <item name="android:navigationBarColor">@color/purple_primary</item>
    </style>

</resources>