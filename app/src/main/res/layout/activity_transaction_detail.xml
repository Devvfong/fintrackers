<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/red_expense">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/detail_transaction"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Spacer to balance back button -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- MONEY ONLY ON RED TOP -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- White Bottom Section - NO DUPLICATE MONEY -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/rounded_top_white_bg"
        android:paddingTop="24dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="24dp"
        android:paddingBottom="24dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Type / Category / Wallet - COLORED -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp"
                    android:baselineAligned="false">

                    <!-- Type - RED -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="#FFF2F2"
                        android:layout_marginEnd="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tvType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#D32F2F"
                            android:textStyle="bold"
                            android:layout_marginTop="1dp"
                            android:singleLine="true"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Category - BLUE -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="#F0F7FF"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tvDetailCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#1976D2"
                            android:textStyle="bold"
                            android:layout_marginTop="1dp"
                            android:singleLine="true"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Wallet - GREEN -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="#F1FFF1"
                        android:layout_marginStart="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wallet"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tvWallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#388E3C"
                            android:textStyle="bold"
                            android:layout_marginTop="1dp"
                            android:singleLine="true"
                            android:ellipsize="end" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="20dp"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeColor="@color/border_light"
                    app:hintTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:enabled="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Attachment -->
                <LinearLayout
                    android:id="@+id/layoutAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@drawable/border_rounded_light"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/attachment"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <ImageView
                        android:id="@+id/imgAttachment"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:scaleType="centerCrop"
                        android:background="#F0F0F0" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
