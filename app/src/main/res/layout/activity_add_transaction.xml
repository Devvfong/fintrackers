<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/red_expense">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/expense"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Spacer to balance the back button -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- Amount Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.32"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/how_much"
            android:textColor="#212121"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/_0"
            android:text="@string/_0"
            android:textSize="64sp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:maxLength="12" />
    </LinearLayout>

    <!-- White Bottom Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.68"
        android:orientation="vertical"
        android:background="@drawable/rounded_top_white_bg"
        android:paddingTop="24dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Category -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="@string/category"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeColor="@color/border_light"
                    app:hintTextColor="@color/text_secondary">

                    <AutoCompleteTextView
                        android:id="@+id/actvCategory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        tools:ignore="VisualLintTextFieldSize,SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="@string/description"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeColor="@color/border_light"
                    app:hintTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="#757575"
                        android:textSize="16sp"
                        tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Wallet -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="@string/wallet"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeColor="@color/border_light"
                    app:hintTextColor="@color/text_secondary">

                    <AutoCompleteTextView
                        android:id="@+id/actvWallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        tools:ignore="VisualLintTextFieldSize,SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="@string/date"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeColor="@color/border_light"
                    app:hintTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="#757575"
                        android:textSize="16sp"
                        tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Attachment -->
                <LinearLayout
                    android:id="@+id/layoutAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <!-- Row: icon + text -->
                    <LinearLayout
                        android:id="@+id/layoutAttachmentRow"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:background="@drawable/border_rounded_light"
                        android:clickable="true"
                        android:focusable="true">


                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_attachment"
                            android:contentDescription="@string/add_attachment"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvAttachmentLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="@string/add_attachment"
                            android:textColor="#757575"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Preview -->
                    <FrameLayout
                        android:id="@+id/attachmentPreviewContainer"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imgAttachmentPreview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/add_attachment" />

                        <ImageButton
                            android:id="@+id/btnRemoveAttachment"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="top|end"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:textAlignment="center"
                            android:contentDescription="@string/remove"
                            android:padding="2dp"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            app:tint="@android:color/white"
                            tools:ignore="RtlCompat" />

                    </FrameLayout>

                </LinearLayout>

                <!-- Repeat -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/repeat"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/repeat_transaction"
                            android:textColor="#757575"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchRepeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/continue_text"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            app:backgroundTint="@color/purple_primary"
            app:cornerRadius="16dp"
            android:elevation="0dp"
            android:layout_marginTop="8dp"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>

</LinearLayout>
