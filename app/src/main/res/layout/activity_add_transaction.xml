<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rootLayout"
    android:background="@color/red_expense">

    <!-- Status Bar Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"/>

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/expense"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"/>

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>

    <!-- Amount Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.32"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_much"
            android:textSize="18sp"
            android:textColor="#FCFCFC"
            android:alpha="0.64"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/_0"
            android:text="@string/_0"
            android:textSize="64sp"
            android:textColor="@android:color/white"
            android:textColorHint="#FCFCFC"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:maxLength="12"/>
    </LinearLayout>

    <!-- White Bottom Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.68"
        android:orientation="vertical"
        android:background="@drawable/rounded_top_white_bg"
        android:paddingTop="24dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Category -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="@string/category"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeColor="@color/border_light"
                    app:hintTextColor="@color/text_secondary">

                    <AutoCompleteTextView
                        android:id="@+id/actvCategory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="@string/description"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeColor="@color/border_light"
                    app:hintTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Wallet -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="@string/wallet"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeColor="@color/border_light"
                    app:hintTextColor="@color/text_secondary">

                    <AutoCompleteTextView
                        android:id="@+id/actvWallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Attachment -->
                <!-- Attachment -->
                <LinearLayout
                    android:id="@+id/layoutAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/border_rounded_light">


                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_attachment"
                        app:tint="@color/text_secondary"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/add_attachment"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <!-- Repeat -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/repeat"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/repeat_transaction"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchRepeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/continue_text"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            app:backgroundTint="@color/purple_primary"
            app:cornerRadius="16dp"
            android:elevation="0dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</LinearLayout>
