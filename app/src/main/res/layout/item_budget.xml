<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Category Header with Warning Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Category Colored Dot -->
            <View
                android:id="@+id/viewCategoryDot"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/circle_shape" />

            <!-- Category Name -->
            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="@string/category_shopping"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <!-- Warning Icon (shown when over budget) -->
            <TextView
                android:id="@+id/ivWarning"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/circle_shape"
                android:backgroundTint="@color/red"
                android:text="!"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Remaining Amount -->
        <TextView
            android:id="@+id/tvRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remaining_placeholder"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif" />

        <!-- Progress Bar with Rounded Corners -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:progress="0"
            android:max="100"
            android:progressDrawable="@drawable/progress_bar_rounded"
            android:layout_marginBottom="12dp" />

        <!-- Budget Info (Spent of Total) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvBudgetInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/budget_placeholder"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif" />

            <!-- Warning Text (shown when over budget) -->
            <TextView
                android:id="@+id/tvWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exceed_limit_message"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:visibility="gone"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>