<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="#FFFFFF">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/keyboard_arrow_left_24px"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                app:tint="@android:color/black" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/create_budget"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium" />
        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- Page padding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ONE single card for the whole form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Amount -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:fontFamily="sans-serif-medium" />

                    <EditText
                        android:id="@+id/etAmount"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_input"
                        android:padding="16dp"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <!-- Currency -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Currency"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:fontFamily="sans-serif-medium" />

                    <Spinner
                        android:id="@+id/spinnerCurrency"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_input"
                        android:padding="12dp" />

                    <!-- Month -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Month"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:fontFamily="sans-serif-medium" />

                    <EditText
                        android:id="@+id/etMonth"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_input"
                        android:padding="12dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:inputType="none"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <!-- Category -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/category"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:fontFamily="sans-serif-medium" />

                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_input"
                        android:padding="12dp" />

                    <!-- Add New Category button -->
                    <Button
                        android:id="@+id/btnAddCategory"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/add_new_category"
                        android:textColor="#7F3DFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAllCaps="false" />

                    <!-- New Category section (no extra CardView background) -->
                    <LinearLayout
                        android:id="@+id/layoutAddCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="12dp"
                        android:background="#F5F5F5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_category_name"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#666666" />

                        <EditText
                            android:id="@+id/etNewCategoryName"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rounded_input"
                            android:padding="12dp"
                            android:hint="@string/enter_category_name"
                            android:inputType="textCapWords"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnCancelNewCategory"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="Cancel"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textAllCaps="false"
                                android:background="@drawable/rounded_input" />

                            <Button
                                android:id="@+id/btnSaveNewCategory"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Save"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textAllCaps="false"
                                android:background="@drawable/rounded_button"
                                android:backgroundTint="#7F3DFF" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Create (Save) button inside the same card -->
                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/create"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:background="@drawable/rounded_button"
                        android:backgroundTint="#7F3DFF"
                        android:elevation="4dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
